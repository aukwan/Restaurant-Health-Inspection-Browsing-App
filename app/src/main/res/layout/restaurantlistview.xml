<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textViewRestaurant"
        android:layout_width="171dp"
        android:layout_height="41dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageRestaurant"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageRestaurant"
        app:layout_constraintTop_toTopOf="@+id/imageRestaurant"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/imageRestaurant"
        android:layout_width="122dp"
        android:layout_height="138dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@drawable/dish" />

    <TextView
        android:id="@+id/textInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageRestaurant"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageRestaurant"
        app:layout_constraintTop_toBottomOf="@+id/textViewRestaurant" />

    <TextView
        android:id="@+id/textInspectionDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageRestaurant"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageRestaurant"
        app:layout_constraintTop_toBottomOf="@+id/textViewRestaurant"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/imageHazardLevel"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/imageRestaurant"
        app:layout_constraintTop_toBottomOf="@+id/imageRestaurant"
        app:srcCompat="@drawable/greendot" />

    <TextView
        android:id="@+id/textHazardLevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/imageHazardLevel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.21"
        app:layout_constraintStart_toEndOf="@+id/imageHazardLevel"
        app:layout_constraintTop_toTopOf="@id/imageHazardLevel" />
</androidx.constraintlayout.widget.ConstraintLayout>